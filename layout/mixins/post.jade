mixin postInfo(item)
    .post-info
        != full_date(item.date, 'll')
        if item.author && (is_home() || is_post())
            a.post-author(href=url_for('https://github.com/' + item.author) target="_blank" title=item.author)
                != '@' + item.author
        //- Github edit button 
        if  is_post()
            a.post-edit-link(href= url_for(theme.github_edit.url + theme.github_edit.branch + theme.github_edit.path + page.source) target="_blank") 编辑此页

//- Index Page
mixin posts()
    ul.home.post-list
        - page.posts.each(function (item) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href= url_for(item.path))
                            != item.title
                    +postInfo(item)
                    .post-content
                        != item.excerpt
                    a.read-more(href= url_for(item.path))!= __('more')
        - })

//- Archive Page
mixin postList()
    .archive
        - var year = 0;
        - var change = false;
        - page.posts.each(function (item) {
            - var itemYear = date(item.date, 'YYYY') - 0;
            - change = year !== itemYear;
            - year = change ? itemYear : year;
            if change
                h2.archive-year!= year
            .post-item
                +postInfo(item)
                a.post-title-link(href= url_for(item.path))
                    != item.title
        - })

//- Post Page
mixin post(item)
    .post
        article.post-block
            h1.post-title
                != item.title
            +postInfo(item)
            .post-content
                != item.content
